<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="선택한 상품이 장바구니에 담겼습니다."
        android:textColor="@color/grayscale_000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="계속 쇼핑하기"
        android:textColor="@color/primary_f46700"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message" />

    <TextView
        android:id="@+id/tv_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="장바구니 확인"
        android:textColor="@color/grayscale_000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_positive"
        app:layout_constraintEnd_toStartOf="@id/tv_positive"
        app:layout_constraintTop_toTopOf="@id/tv_positive" />

</androidx.constraintlayout.widget.ConstraintLayout>